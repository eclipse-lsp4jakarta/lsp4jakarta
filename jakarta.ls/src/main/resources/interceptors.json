{
    "Jakarta Interceptors - @Interceptor": {
      "prefix": "interceptor_class",
      "body": [
		"package ${1:packagename};",
		"",
        "import jakarta.interceptor.*;",
		"import jakarta.annotation.*;",
		"import jakarta.annotation.Priority;",
		"",
		"@Interceptor",
		"@Priority(Interceptor.Priority.APPLICATION)",
		"public class ${TM_FILENAME_BASE} {",
        "",
		"\t@AroundInvoke",
		"\tpublic Object interceptBusinessMethod(InvocationContext ctx) throws Exception {",
		"\t\ttry {",
		"\t\t\tSystem.out.println(\"Before business method: \" + ctx.getMethod().getName());",
		"\t\t\treturn ctx.proceed();",
		"\t\t} catch (Exception ex) {",
		"\t\t\tSystem.err.println(\"Business method exception: \" + ex.getMessage());",
		"\t\t\tthrow ex;",
		"\t\t} finally {",
		"\t\t\tSystem.out.println(\"After business method: \" + ctx.getMethod().getName());",
		"\t\t}",
		"\t}",
		"",
		"\t@AroundTimeout",
		"\tpublic Object interceptTimeout(InvocationContext ctx) throws Exception {",
		"\t\ttry {",
		"\t\t\tSystem.out.println(\"Before timeout method: \" + ctx.getMethod().getName());",
		"\t\t\treturn ctx.proceed();",
		"\t\t} catch (Exception ex) {",
		"\t\t\tSystem.err.println(\"Timeout method exception: \" + ex.getMessage());",
		"\t\t\tthrow ex;",
		"\t\t} finally {",
		"\t\t\tSystem.out.println(\"After timeout method: \" + ctx.getMethod().getName());",
		"\t\t}",
		"\t}",
		"",
		"\t@AroundConstruct",
		"\tpublic Object interceptConstruction(InvocationContext ctx) throws Exception {",
		"\t\ttry {",
		"\t\t\tSystem.out.println(\"Before bean construction: \" + ctx.getConstructor());",
		"\t\t\treturn ctx.proceed();",
		"\t\t} catch (Exception ex) {",
		"\t\t\tSystem.err.println(\"Construction exception: \" + ex.getMessage());",
		"\t\t\tthrow ex;",
		"\t\t} finally {",
		"\t\t\tSystem.out.println(\"After bean construction\");",
		"\t\t}",
		"\t}",
		"",
		"\t@PostConstruct",
		"\tpublic void postConstruct() {",
		"\t\tSystem.out.println(\"PostConstruct logic executed\");",
		"\t}",
		"",
		"\t@PreDestroy",
		"\tpublic void preDestroy() {",
		"\t\tSystem.out.println(\"PreDestroy logic executed\");",
		"\t}",
		"}"
      ],
      "description": "Interceptor class with constructor, fields and interceptor methods",
      "context": {
        "type": "jakarta.interceptor.Interceptor",
        "contentType": "class"
      }
    }
  }